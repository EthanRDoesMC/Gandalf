#!/bin/bash
echo "Removing the Gandalf applicationâ€¦"
#Check if lowercase gandalf.app exists & then delete it

if [ -e /Applications/gandalf.app ]; then
  echo "Debug: Found old gandalf.app application. This is no error."
  echo "Removing it..."
  rm -rf /Applications/gandalf.app
fi

rm -rf /Applications/Gandalf.app
rm -rf /usr/bin/gandalf #Needed? Doesn't dpkg already do this -jonisc
echo "Finished removing the Gandalf application"
