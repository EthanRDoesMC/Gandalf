#!/bin/bash


#Variables
RED='\033[0;31m' # Define RED as red
NC='\033[0m' # Define NC as no color

#Main script
echo "Installing the Gandalf application..."
echo "Unpackingâ€¦"

tar -xvf /var/mobile/Downloads/Gandalf102/Gandalf.app.tar.gz -C /Applications/
echo "App installed..."


echo "Cleaning up files.."

rm -rf /var/mobile/Downloads/Gandalf102


echo "Please Wait... running uicache..."
uicache


echo
echo -e "${RED}--- Now please run 'gandalf hold'! Just to be safe. ---${NC}"
echo
echo "The app has the command, if you forget."
echo
echo "This command has to run after 'su' have logged in as root, so run it after 'su' in e.g. MTerminal."

echo "temporary command permissions fix running"
chmod 0755 /usr/bin/gandalf
echo "done, in the future you won't have to see this"
echo
echo "Thanks for using Gandalf!"
